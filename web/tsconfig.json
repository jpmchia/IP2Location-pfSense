{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "strict": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true
    },
    "include": ["src/**/*.ts"]
}